########################################################################################
### Modules
########################################################################################

Stream = require 'stream'
util = require 'util'

logger = require '../log/logger'


########################################################################################
### Class
########################################################################################

class StringStream extends Stream.Readable
	constructor: (@str) ->
		super()

	_read: () ->
		@push new Buffer(@str).toString('utf-8')
		@push null


########################################################################################
### Exports
########################################################################################

module.exports = StringStream